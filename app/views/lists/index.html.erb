<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% @movies = Movie.all %>
    <% @movies.each do |movie| %>
        <div class="carousel-item carousel-image active">
          <div class="d-block w-100 carousel-image" style="background-image: url('<%= movie.poster_url %>')"></div>
          <%# <img class="d-block w-100 carousel-image" src="<%= movie.poster_url %>">
        </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="cards cards-lists m-6">
    <% @lists.each do |list| %>
      <div class="card-category shadow-sm" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.image_url %>')">
        <%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %>
      </div>
    <% end %>
  </div>
</div>
